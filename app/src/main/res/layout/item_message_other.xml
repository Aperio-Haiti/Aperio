<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tvMRText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@id/ivVendorAvatar"
        android:background="@drawable/bg_their"
        android:fontFamily="@font/roboto"
        android:paddingStart="10dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/colorToolbarIcons"
        android:textSize="18sp"
        tools:text="This a sample message. Lets try to make it longer with some texts." />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivVendorAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        tools:src="@tools:sample/avatars[5]" />


</RelativeLayout>