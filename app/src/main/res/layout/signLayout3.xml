<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:background="#00000000"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_information"
                android:layout_width="246.57dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:fontFamily="roboto"
                android:text="Personal informations"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:fontFamily="roboto"
                android:gravity="end"
                android:text="1 of 3"
                android:textSize="25sp" />

        </RelativeLayout>


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/form"
        android:layout_width="378dp"
        android:layout_height="382dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
android:layout_below="@+id/info"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"

            >

            <TextView
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:textSize="36dp"
                android:text="Do you want to make your store visible on the map ?" />

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp">
               <Button
                   android:layout_width="155dp"
                   android:layout_height="56dp"
                   android:layout_alignParentLeft="true"
                   android:background="#E44162"
                   android:text="YES"
                   android:textColor="#fff"/>


               <Button
                   android:layout_width="155dp"
                   android:layout_height="56dp"
                   android:background="#fff"
                   android:layout_alignParentRight="true"
                   android:text="NO"
                   android:textColor="#E44162"/>

           </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/by_acceptin"
                    android:layout_width="324dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="21dp"
                    android:layout_alignParentTop="true"
                    android:text="@string/by_acceptin"
                    android:gravity="center_horizontal|top"
                    android:textSize="14dp"
                    />
            </RelativeLayout>



            <Button
                android:id="@+id/login"
                android:layout_width="339dp"
                android:layout_height="56dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginTop="64dp"
                android:background="#E44162"
                android:textAppearance="@style/e44162"
                android:text="SignUp"
                android:textColor="#fff"
                android:textSize="20dp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>