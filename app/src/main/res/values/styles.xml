<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E44162</item>
        <item name="colorPrimaryDark">#CE415E</item>
        <item name="colorAccent">#403F4C</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="SignupUserTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/background_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="MapTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/background_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="ProfileTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/background_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="PrimaryTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/colorToolbarIcons</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="e44162">Style</style>

    <style name="forgotpass">passwordStyle</style>

    <style name="new_to_aper">Appearance</style>

    <style name="signup">sign_style</style>

    <style name="signup_as_s">sign_appearence</style>

    <style name="let_s_disco">text_app</style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
